rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.is_active != false;
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isSelf(userId) || isAdmin();
      allow create: if isSelf(userId);
      allow update: if isSelf(userId) || isAdmin();
      allow delete: if false;
    }

    match /admins/{adminId} {
      allow read: if isSelf(adminId) || isAdmin();
      allow create: if isAdmin() || (isSelf(adminId) && get(/databases/$(database)/documents/users/$(adminId)).data.role != 'user');
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    match /tickets/{ticketId} {

      function validPublicTicketCreate() {
        return !('user_id' in request.resource.data) &&
               !('assigned_to' in request.resource.data) &&
               !('assigned_by' in request.resource.data) &&
               !('assignee_name' in request.resource.data) &&
               (!('status' in request.resource.data) || request.resource.data.status == 'Open') &&
               request.resource.data.keys().hasOnly([
                 'user_email','inventory','name','user_phone','department','location','device','priority','subject','message','status_ticket','ticketId','user_agent','platform','createdAt','updatedAt','qa','action_by','note'
               ]) &&
               request.resource.data.subject is string && request.resource.data.subject.matches('^.{1,200}$') &&
               request.resource.data.message is string && request.resource.data.message.matches('^.{1,2000}$') &&
               request.resource.data.department is string && request.resource.data.department.matches('^.{0,100}$') &&
               request.resource.data.location is string && request.resource.data.location.matches('^.{0,100}$') &&
               request.resource.data.priority is string && request.resource.data.priority.matches('^(Low|Medium|High|Critical)$');
      }

      function validUserTicketCreate() {
        return request.resource.data.user_id == request.auth.uid &&
               !('assigned_to' in request.resource.data) &&
               !('assigned_by' in request.resource.data) &&
               !('assignee_name' in request.resource.data) &&
               request.resource.data.subject is string && request.resource.data.subject.matches('^.{1,200}$') &&
               request.resource.data.message is string && request.resource.data.message.matches('^.{1,2000}$');
      }

      allow create: if (isSignedIn() && validUserTicketCreate())
                    || (!isSignedIn() && validPublicTicketCreate());

      allow read: if isAdmin() 
                    || (isSignedIn() 
                        && (resource.data.user_id == request.auth.uid 
                            || resource.data.user_email == request.auth.token.email));

      function isUnassigned() {
        return !('assigned_to' in resource.data) && !('action_by' in resource.data);
      }

      function isOpenStatus() {
        return (('status' in resource.data) && resource.data.status == 'Open')
               || (('qa' in resource.data) && resource.data.qa == 'Open');
      }

      function canUserSoftDelete() {
        return isSignedIn()
               && resource.data.user_id == request.auth.uid
               && isUnassigned()
               && isOpenStatus();
      }

      allow update: if isAdmin()
                    || (
                      isSignedIn()
                      && resource.data.user_id == request.auth.uid
                      && request.resource.data.user_id == resource.data.user_id
                      && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                        'note','updated_at','updatedAt','user_agent','platform','code',
                        'user_name','user_department','user_email','user_phone','last_updated'
                      ])
                    )
                    || (
                      canUserSoftDelete()
                      && request.resource.data.diff(resource.data).changedKeys().hasOnly([
                        'deleted','deleted_by','deleted_by_name','delete_reason','deleted_at','last_updated'
                      ])
                    );

      allow delete: if isAdmin();

      match /updates/{updateId} {
        allow read: if isAdmin()
                    || (isSignedIn() && get(/databases/$(database)/documents/tickets/$(ticketId)).data.user_id == request.auth.uid);
        allow create: if isAdmin();
        allow update, delete: if isAdmin();
      }
    }
  }
}
